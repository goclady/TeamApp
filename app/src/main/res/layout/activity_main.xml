<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="2dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hp"
        android:layout_marginBottom="350dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/teamwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team work all"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"/>
    <TextView
        android:id="@+id/latin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convallis vitae, dictum justo, iaculis id,"
        android:textSize="20dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/teamwork"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/latin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cras a ac augue netus egestas semper"
        android:textSize="20dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/latin1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/latin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="varius facilisis id"
        android:textSize="20dp"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/latin2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/ovals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/latin3"
        >
    <ImageView
        android:id="@+id/oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/oval"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@id/oval1"

       />
    <ImageView
        android:id="@+id/oval1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/oval1"
        app:layout_constraintStart_toEndOf="@+id/oval"/>
    <ImageView
        android:id="@+id/oval2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/oval2"
        app:layout_constraintStart_toEndOf="@+id/oval1"/>
    <ImageView
        android:id="@+id/oval3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/oval3"
        app:layout_constraintStart_toEndOf="@+id/oval2"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:backgroundTint="#000000"
        app:cornerRadius="8dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/register"
        app:layout_constraintTop_toBottomOf="@id/ovals"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:backgroundTint="#6C63FF"
        app:cornerRadius="8dp"
        android:layout_marginTop="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sign"
        app:layout_constraintTop_toBottomOf="@id/ovals"
        />




</androidx.constraintlayout.widget.ConstraintLayout>



